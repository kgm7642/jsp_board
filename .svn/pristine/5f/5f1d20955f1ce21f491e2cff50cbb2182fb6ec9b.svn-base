package algorithm;

import java.util.Scanner;

// Q.1 1 부터 n 까지 연속한 정수의 합을 구하는 알고리즘을 만들어보세요.
// n 은 콘솔을 통해 입력 받습니다.
// 결과값의 예는 다음과 같습니다.
// 1~10 : 55
// 1~100 : 5050

public class Test1 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = Integer.parseInt(sc.nextLine());
		int answer = 0;
		
		for(int i=1; i<=n; i++) {
			answer += i;
		}
		System.out.println(answer);
	}
}
